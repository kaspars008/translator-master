<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:id="@+id/container_language_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardBackgroundColor="#eaeaea"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/original_text_input_height"
            android:paddingBottom="16dp"
            >
            <TextView
                android:id="@+id/result_language_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="russian"
                android:textSize="16sp"
                android:textColor="#162e45"
                android:layout_margin="5dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/result_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="#162e45"
                android:textSize="21sp"
                android:text="tree"
                />

        <LinearLayout
            android:id="@+id/translation_to_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"

            >

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <fragment
            android:id="@+id/player"
            android:layout_marginTop="5dp"
            android:name="com.kaspars.mytranslator.ui.fragment.FragmentPlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/fragment_player_button" />
        <ImageButton
            android:id="@+id/copy_to_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#EEEEEE"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_content_copy_black_24dp"
            android:contentDescription="@string/сopy" />
        <ImageButton
            android:id="@+id/add_to_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:background="#EEEEEE"
            android:src="@android:drawable/star_big_off"
             />
    </LinearLayout>
</LinearLayout>