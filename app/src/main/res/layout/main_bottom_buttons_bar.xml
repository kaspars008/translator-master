<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"

    android:orientation="vertical"
    >
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
         >
    </Space>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/main_bottom_button_mic"
            android:layout_width="@dimen/main_bottom_button_size"
            android:layout_height="@dimen/main_bottom_button_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic_black_36dp"
            android:contentDescription="@string/speech_to_text"
            style="@style/MainBottomButton"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <ImageButton
            android:id="@+id/main_bottom_button_image"
            android:layout_width="@dimen/main_bottom_button_size"
            android:layout_height="@dimen/main_bottom_button_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_camera_alt_black_36dp"
            android:contentDescription="@string/make_photo"
            style="@style/MainBottomButton"
            />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="1dp"
         >
    </Space>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageButton
            android:id="@+id/activity_translator_close_button"
            android:layout_width="@dimen/main_bottom_button_size"
            android:layout_height="@dimen/main_bottom_button_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_close_black"
            android:contentDescription="@string/make_photo"
            style="@style/MainBottomButton"

            android:padding="16dp"
            android:clickable="true"


            />
    </FrameLayout>
</LinearLayout>